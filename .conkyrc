alignment top_left
background yes
border_width 0
border_inner_margin 0
border_outer_margin 0
cpu_avg_samples 1
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_outline no
draw_shades no
use_xft yes
xftfont terminus:pixelsize=12
# Conky defaults to -1 -1 for some reason, so nudge it into the actual corner
gap_x 1
gap_y 1
# In order to make the window height 16 pixels, it needs to be specified as 14
# pixels.  Same with the width.
minimum_size 248 14
maximum_width 248
net_avg_samples 1
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_colour 111111
own_window_type panel
own_window_hints undecorated,below
stippled_borders 0
update_interval 10
uppercase no
use_spacer right
show_graph_scale no
show_graph_range no

TEXT
${goto 0}${font sazanami mincho:pixelsize=12:antialias=false}${color red}↓${font}${downspeedf wlan0}\
${goto 42}${font sazanami mincho:pixelsize=12:antialias=false}${voffset -2}${color green}↑${font}${upspeedf wlan0}\
${goto 183}${color grey}${uptime}\
${goto 111}${color dark turquoise}${mem}\
${if_match "${battery_short}"=="D ${battery_percent}%"}${color red}${else}\
${if_match "${battery_short}"=="C ${battery_percent}%"}${color orange}${else}\
${if_match "${battery_short}"=="F"}${color green}${else}\
${color white}\
${endif}${endif}${endif}\
${goto 0}${alignr 70}${battery_percent}%${voffset -12}
${goto 0}${alignr 140}${color gold}${cpu cpu0}%\
